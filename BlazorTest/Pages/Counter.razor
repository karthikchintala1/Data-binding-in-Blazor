@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>
<input type="text" placeholder="@_placeHolderText"/>

<input type="text" bind="@Clock"/>
@functions {
    private DateTime Clock { get; set; } = DateTime.Now;
    private string _placeHolderText = "Enter your name here:";
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
        Console.WriteLine("current count is :" + currentCount);
    }
}
